<div class="container"></div>
    <div class="row m-5">
        <h3 class="text-center text-uppercase p-2">Listado de Clientes</h3>

        <div style="padding: 10px;">
        <a class="btn btn-danger" href="/admin/clientes/add"><i class="bi bi-plus-circle-fill"></i>Agregar Cliente</a>
        </div>

        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col">ID</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Dirección</th>
                    <th scope="col">Teléfono</th>
                    <th scope="col">Correo</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each clientes}}
                    <tr>
                        <td>{{this.cliente_id}}</td>
                        <td>{{this.nombre}}</td>
                        <td>{{this.direccion}}</td>
                        <td>{{this.telefono}}</td>
                        <td>{{this.email}}</td>
                        <td>
                            <div class="">
                                <a href="/edit" class="btn btn-warning p-2">
                                    <i class="bi bi-pencil-fill"></i>Actualizar</a>

                                <a href="#" class="btn btn-danger p-2">
                                    <i class="bi bi-trash-fill"></i>Eliminar</a>
                            </div>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>